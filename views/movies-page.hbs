<h1>Ironhack cinema</h1>
<h2>Click on the movie to check the showtimes</h2>
<hr class="mb-3">
<hr>
<div class="container">
    <div class="row">
        {{#each movies}}
        <div class="col-md-4">
            <article class="card-group">
                <img src="{{image}}" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <a href="/movie/:id" class="btn btn-dark">See more</a>
                </div>
            </article>
        </div>
        {{/each}}
    </div>
</div>
<a href="/" class="btn btn-dark">Volver a inicio</a>